<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HargaLaundry"
    android:padding="10dp">
    <GridLayout
        android:id="@+id/gridPesanan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="1"
        android:columnCount="1"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:layout_centerVertical="true">
        <TextView
            android:id="@+id/TextHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Input Pesanan"
            android:textColor="@color/biru"
            android:textSize="40sp"
            android:textAlignment="center"
            android:fontFamily="@font/poppinsbold"
            android:layout_centerInParent="true"
            />
        <androidx.cardview.widget.CardView
            android:id="@+id/cardPaketExpress"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:cardCornerRadius="17dp"
            app:cardElevation="1dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/TextNamaPelanggan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsbold"
                    android:text="Nama Pelanggan"
                    android:textColor="@color/black" />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/NamaPelanggan"
                    android:layout_below="@id/TextNamaPelanggan"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:hint="Nama Pelanggan"
                    app:boxBackgroundColor="@color/white"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="@color/biru"
                    app:hintTextColor="@color/biru"
                    app:boxCornerRadiusTopStart="5dp"
                    app:boxCornerRadiusBottomEnd="5dp"
                    app:boxCornerRadiusBottomStart="5dp"
                    app:boxCornerRadiusTopEnd="5dp"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/InputNamaPelanggan"
                        android:textColor="@color/biru"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />

                </com.google.android.material.textfield.TextInputLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:cardCornerRadius="17dp"
            app:cardElevation="1dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/TextHpPelanggan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsbold"
                    android:text="No Pelanggan"
                    android:textColor="@color/black" />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/HPPelanggan"
                    android:layout_below="@id/TextHpPelanggan"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:hint="No Pelanggan"
                    app:boxBackgroundColor="@color/white"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="@color/biru"
                    app:hintTextColor="@color/biru"
                    app:boxCornerRadiusTopStart="5dp"
                    app:boxCornerRadiusBottomEnd="5dp"
                    app:boxCornerRadiusBottomStart="5dp"
                    app:boxCornerRadiusTopEnd="5dp"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/InputNoHPPelanggan"
                        android:textColor="@color/biru"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />

                </com.google.android.material.textfield.TextInputLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:cardCornerRadius="17dp"
            app:cardElevation="1dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/TextKuantitas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsbold"
                    android:text="Kuantitas Pesanan"
                    android:textColor="@color/black" />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/Kuantitas"
                    android:layout_below="@id/TextKuantitas"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:hint="Kuantitas Pesanan"
                    app:boxBackgroundColor="@color/white"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="@color/biru"
                    app:hintTextColor="@color/biru"
                    app:boxCornerRadiusTopStart="5dp"
                    app:boxCornerRadiusBottomEnd="5dp"
                    app:boxCornerRadiusBottomStart="5dp"
                    app:boxCornerRadiusTopEnd="5dp"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/InputKuantitas"
                        android:textColor="@color/biru"
                        android:inputType="number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />

                </com.google.android.material.textfield.TextInputLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </GridLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnInputPesanan"
        android:layout_width="match_parent"
        android:layout_below="@id/gridPesanan"
        android:layout_height="60dp"
        android:fontFamily="@font/poppinsbold"
        android:text="SUBMIT PESANAN"

        android:textSize="15sp"
        app:cornerRadius="12dp"
        app:backgroundTint="@color/biru"
        android:layout_marginTop="20dp"/>
</RelativeLayout>